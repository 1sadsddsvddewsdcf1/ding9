  <filter>
    <filter-name>UrlRewriteFilter</filter-name>
    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    <init-param>
      <param-name>confPath</param-name>
      <param-value>/WEB-INF/www-urlrewrite.xml</param-value>
    </init-param>
    <init-param>
      <param-name>logLevel</param-name>
      <param-value>ERROR</param-value>
    </init-param>
    <init-param>
        <param-name>statusPath</param-name>
        <param-value>/urlrewrite-status</param-value>
    </init-param>
    <init-param>
        <param-name>statusEnabled</param-name>
        <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>statusEnabledOnHosts</param-name>
      <param-value>localhost, *.ding9.com</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>/urlrewrite-status</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>*.xhtml</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
   
  

  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>  

	    <init-param>
      <param-name>config/collection</param-name>
      <param-value>/WEB-INF/xml/struts-config-collection.xml</param-value>
    </init-param>

    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name> 
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>5</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>


   

  <!-- Dynamic File to Static File  Servlet Configuration -->
  <servlet>
    <servlet-name>GetDynamicFileToStaticFile</servlet-name>
    <servlet-class>com.ding9.util.GetDynamicFileToStaticFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetDynamicFileToStaticFile</servlet-name>
    <url-pattern>/server/getdynamicfiletostaticfile</url-pattern>
  </servlet-mapping>



      <filter>
    <filter-name>encodingfilter</filter-name>
    <filter-class>com.filter.SetCharacterEncodingFilter</filter-class>
  </filter>

    <filter-mapping>
    <filter-name>encodingfilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>


    <servlet>
    <servlet-name>Image</servlet-name>
    <servlet-class>com.ding9.util.validate.Image</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>Image</servlet-name>
    <url-pattern>/server/validateimage</url-pattern>
  </servlet-mapping>
  
  
  
 
